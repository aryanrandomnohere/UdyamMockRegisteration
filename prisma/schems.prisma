generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UdyamRegistration {
  id               Int      @id @default(autoincrement())
  aadhaarNumber    String   @unique @db.VarChar(12)  // Step 1: Aadhaar number
  entrepreneurName String   @db.VarChar(100)  // Step 1: Name as per Aadhaar
  otp              String?  @db.VarChar(6)    // Step 1: Mock OTP value
  otpVerified      Boolean  @default(false)   // Step 1: OTP verification status
  mobileNumber     String      @unique @db.VarChar(10)       // Step 1: Mobile number

  // Step 2 fields
  panNumber   String?  @unique @db.VarChar(10)  // Step 2: PAN number
  panName     String?  @db.VarChar(100)        // Step 2: PAN name
  DOB         DateTime                         // Step 2: Date of Birth
  typeOfOrg   String?  @db.VarChar(100)        // Step 2: Type of Organisation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  panVerified Boolean  @default(false)        // Step 2: If PAN validation passes
}
